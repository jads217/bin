#!/usr/bin/env perl
#script that provides the sum of all natural numbers that are multiples of 3 or 5 between 0 and 1000
use strict;

my $number;
my $sum = 0;
my $factor3;
my $factor5;

for ($number = 1; $number < 1000; $number++) {
		$factor3 = $number / 3;
		$factor5 = $number / 5;
		if (((int $number / 3) == $factor3) | ((int $number / 5) == $factor5)) {
				print "$number is a factor of 3 or 5\n";
				$sum = $sum + $number;
		}
}
print "Final sum is $sum\n";
